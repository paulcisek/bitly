<div class="container-fluid password">
    <h2>Forgot your password?</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }, html:{role: 'form'}) do |f| %>
        <%= render 'shared/error_messages', object: resource %>

      <div class="from-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, class:'form-control' %>
      </div>

      <div class="actions">
        <%= f.submit "Send me reset password instructions", class:'btn btn-default' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
</div>